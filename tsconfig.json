{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "Cortex.render",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "paths": {
            "*": [ "*" ],
            "cortex": [ "." ]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "**/*"
    ]
}
